@model DpEmployee.Models.Employee

<br />
<h2 class="text-info">@Model.FirstName</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Initials"></label>
            </div>
            <div class="col-6">
                <input asp-for="Initials" class="form-control" disabled/>
                <span asp-validation-for="Initials" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="FirstName">First Name</label>
            </div>
            <div class="col-6">
                <input asp-for="FirstName" class="form-control" disabled/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Surname"></label>
            </div>
            <div class="col-6">
                <input asp-for="Surname" class="form-control" disabled/>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Address1">Address 1</label>
            </div>
            <div class="col-6">
                <input asp-for="Address1" class="form-control" disabled/>
                <span asp-validation-for="Address1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Address2">Address 2</label>
            </div>
            <div class="col-6">
                <input asp-for="Address2" class="form-control" disabled/>
                <span asp-validation-for="Address2" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DOB">Date Of Birth</label>
            </div>
            <div class="col-6">
                <input asp-for="DOB" type="date" id="datePickerId" disabled/>
                <input id="age" disabled/>
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Status"></label>
            </div>
            <div class="col-6">
                <input asp-for="Status" type="checkbox" class="btn-check" id="btn-check-outlined" autocomplete="off" disabled>
                <label class="btn btn-outline-primary" for="btn-check-outlined">Active</label><br>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
        <br />
        <h3 class="text-info">Employee Family Details</h3>
        <br />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="FdFirstName">First Name</label>
            </div>
            <div class="col-6">
                <input asp-for="FdFirstName" class="form-control" disabled/>
                <span asp-validation-for="FdFirstName" class="text-danger"></span>
            </div>
        </div> <div class="form-group row">
            <div class="col-3">
                <label asp-for="FdSurname">Surname</label>
            </div>
            <div class="col-6">
                <input asp-for="FdSurname" class="form-control" disabled/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div> <div class="form-group row">
            <div class="col-3">
                <label asp-for="FdRelationShip">Relationship to Employee</label>
            </div>
            <div class="col-6">
                <input asp-for="FdRelationShip" class="form-control" disabled/>
                <span asp-validation-for="FdRelationShip" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/EmployeeList.js"></script>
}